{
  "name": "sparrow-chat",
  "description": "Realtime Chat Application using FeathersJS",
  "version": "1.0.0",
  "homepage": "https://github.com/toddbluhm/sparrow-chat",
  "private": true,
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Todd Bluhm",
    "email": "toddbluhm@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toddbluhm/sparrow-chat/issues"
  },
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^12.0.0",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "test": "yarn compile && yarn coverage",
    "dev": "env-cmd -e default ts-node-dev --no-notify src/",
    "start": "yarn compile && node lib/",
    "clean": "shx rm -rf test/data/",
    "coverage": "yarn clean && nyc yarn mocha",
    "mocha": "env-cmd --silent -e default,test ts-mocha \"test/**/*.ts\" --recursive --exit",
    "compile": "shx rm -rf lib/ && tsc",
    "lint": "ts-standard --fix && tsc --noEmit"
  },
  "types": "lib/",
  "dependencies": {
    "@feathersjs/authentication": "^4.5.1",
    "@feathersjs/authentication-local": "^4.5.1",
    "@feathersjs/authentication-oauth": "^4.5.1",
    "@feathersjs/configuration": "^4.5.1",
    "@feathersjs/errors": "^4.5.1",
    "@feathersjs/express": "^4.5.1",
    "@feathersjs/feathers": "^4.5.1",
    "@feathersjs/socketio": "^4.5.1",
    "@feathersjs/transport-commons": "^4.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "feathers-nedb": "^5.1.0",
    "helmet": "^3.21.2",
    "husky": "^4.2.3",
    "nedb": "^1.8.0",
    "serve-favicon": "^2.5.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/mocha": "^7.0.1",
    "@types/nedb": "^1.8.9",
    "@types/node": "^12.12.28",
    "@types/serve-favicon": "^2.5.0",
    "axios": "^0.19.2",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "ts-mocha": "^6.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-standard": "^5.0.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "ts-standard": {
    "project": "./tsconfig.eslint.json",
    "ignore": [
      "lib",
      "quickstart"
    ],
    "env": [
      "mocha",
      "browser"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
